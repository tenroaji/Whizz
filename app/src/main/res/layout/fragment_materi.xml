<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/viewBeriRating"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLabelRating"
        style="@style/TextDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:text="Beri Rating dan Testimoni"
        app:layout_constraintBottom_toBottomOf="@id/viewBeriRating"
        app:layout_constraintStart_toStartOf="@id/viewBeriRating"
        app:layout_constraintTop_toTopOf="@id/viewBeriRating" />

    <ImageView
        android:id="@+id/imgRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="@id/viewBeriRating"
        app:layout_constraintEnd_toEndOf="@id/viewBeriRating"
        app:layout_constraintTop_toTopOf="@id/viewBeriRating"
        app:srcCompat="@drawable/ic_dropdown" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupRating"
        app:constraint_referenced_ids="viewBeriRating,tvLabelRating,imgRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/viewStreaming"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/tvTime"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:background="@drawable/background_streaming"
        app:layout_constraintTop_toBottomOf="@id/viewBeriRating" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgStreaming"
        android:layout_width="@dimen/margin_24dp"
        android:layout_height="@dimen/margin_24dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_20dp"
        app:layout_constraintStart_toStartOf="@id/viewStreaming"
        app:layout_constraintTop_toTopOf="@id/viewStreaming"
        app:srcCompat="@drawable/ic_streaming_red" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tvLabelJadwalStreamin"
        android:text="Jadwal Live Streaming"
        android:textColor="@color/colorWhite"
        style="@style/TextLabelTitle"
        android:layout_marginStart="@dimen/margin_8dp"
        app:layout_constraintStart_toEndOf="@id/imgStreaming"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintTop_toTopOf="@id/viewStreaming"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="0dp"
        android:id="@+id/viewLine1"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="#B8B9B9"
        app:layout_constraintStart_toStartOf="@id/viewStreaming"
        app:layout_constraintEnd_toEndOf="@id/viewStreaming"
        app:layout_constraintTop_toBottomOf="@id/tvLabelJadwalStreamin"/>

    <ImageView
        android:layout_width="@dimen/margin_16dp"
        android:id="@+id/imgTanggal"
        app:layout_constraintTop_toBottomOf="@id/viewLine1"
        android:layout_marginTop="@dimen/margin_20dp"
        app:srcCompat="@drawable/ic_time_white"
        app:layout_constraintStart_toStartOf="@id/imgStreaming"
        android:layout_height="@dimen/margin_16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tvLabelTanggal"
        android:layout_marginTop="@dimen/margin_20dp"
        android:textSize="13sp"
        android:text="TANGGAL"
        android:layout_marginStart="@dimen/margin_8dp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/muli_semibold_family"
        app:layout_constraintTop_toTopOf="@id/viewLine1"
        app:layout_constraintStart_toEndOf="@id/imgTanggal"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tvTanggal"
        tools:text="28 November 2019"
        android:layout_marginEnd="@dimen/margin_16dp"
        style="@style/TextDesc"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/viewLine1"
        app:layout_constraintEnd_toEndOf="@id/viewStreaming"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="0dp"
        android:id="@+id/viewLine2"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="#B8B9B9"
        app:layout_constraintStart_toStartOf="@id/viewStreaming"
        app:layout_constraintEnd_toEndOf="@id/viewStreaming"
        app:layout_constraintTop_toBottomOf="@id/tvTanggal"/>

    <ImageView
        android:layout_width="@dimen/margin_16dp"
        android:id="@+id/imgTime"
        app:layout_constraintTop_toBottomOf="@id/viewLine2"
        android:layout_marginTop="@dimen/margin_20dp"
        app:srcCompat="@drawable/ic_time_white"
        app:layout_constraintStart_toStartOf="@id/imgStreaming"
        android:layout_height="@dimen/margin_16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tvLabelTime"
        android:layout_marginTop="@dimen/margin_20dp"
        android:textSize="13sp"
        android:text="TIME"
        android:layout_marginStart="@dimen/margin_8dp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/muli_semibold_family"
        app:layout_constraintTop_toTopOf="@id/viewLine2"
        app:layout_constraintStart_toEndOf="@id/imgTime"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tvTime"
        tools:text="20 : 20 WITA"
        android:layout_marginEnd="@dimen/margin_16dp"
        style="@style/TextDesc"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/viewLine2"
        app:layout_constraintEnd_toEndOf="@id/viewStreaming"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/mRecyclerMateri"
        app:layout_constraintTop_toBottomOf="@id/viewStreaming"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>