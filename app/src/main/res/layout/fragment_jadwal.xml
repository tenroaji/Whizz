<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/viewBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@drawable/background_price"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvTime"/>
    <ImageView
        android:id="@+id/imgLocation"
        android:layout_width="@dimen/margin_16dp"
        android:layout_height="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="@id/viewBackground"
        app:layout_constraintTop_toTopOf="@id/viewBackground"
        app:srcCompat="@drawable/ic_lokasi" />

    <TextView
        android:id="@+id/tvAlamat"
        style="@style/TextDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:layout_constraintEnd_toEndOf="@id/viewBackground"
        app:layout_constraintStart_toEndOf="@id/imgLocation"
        app:layout_constraintTop_toTopOf="@id/viewBackground"
        tools:text="Nipah Mall and Office Building Bikin Bikin Creative Hub Jl. Urip Sumoharho KM. 5, Makassar" />

    <View
        android:id="@+id/viewLine1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:background="#E5E5E5"
        app:layout_constraintTop_toBottomOf="@id/tvAlamat" />

    <ImageView
        android:id="@+id/imgTanggal"
        android:layout_width="@dimen/margin_16dp"
        android:layout_height="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="@id/viewBackground"
        app:layout_constraintTop_toBottomOf="@id/viewLine1"
        app:srcCompat="@drawable/ic_kalender" />

    <TextView
        android:id="@+id/tvTanggal"
        style="@style/TextDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:layout_constraintEnd_toEndOf="@id/viewBackground"
        app:layout_constraintStart_toEndOf="@id/imgTanggal"
        app:layout_constraintTop_toBottomOf="@id/viewLine1"
        tools:text="28 November 2019" />

    <ImageView
        android:id="@+id/imgTime"
        android:layout_width="@dimen/margin_16dp"
        android:layout_height="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="@id/viewBackground"
        app:layout_constraintTop_toBottomOf="@id/viewLine2"
        app:srcCompat="@drawable/ic_time" />

    <TextView
        android:id="@+id/tvTime"
        style="@style/TextDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:layout_constraintEnd_toEndOf="@id/viewBackground"
        app:layout_constraintStart_toEndOf="@id/imgTime"
        app:layout_constraintTop_toBottomOf="@id/viewLine2"
        app:layout_constraintBottom_toBottomOf="@id/viewBackground"
        android:paddingBottom="@dimen/margin_16dp"
        tools:text="28 November 2019" />

    <View
        android:id="@+id/viewLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:background="#E5E5E5"
        app:layout_constraintTop_toBottomOf="@id/tvTanggal" />
</androidx.constraintlayout.widget.ConstraintLayout>