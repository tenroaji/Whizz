<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_16dp"
    android:layout_marginEnd="@dimen/margin_16dp">

    <TextView
        android:id="@+id/tvComment"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Latihan 1" />

    <TextView
        android:id="@+id/tvTanggal"
        style="@style/TextDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvComment"
        tools:text="28 Nov 2019" />

    <ImageView
        android:id="@+id/imgArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_dropdown" />

    <TextView
        android:id="@+id/tvKetLulus"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintEnd_toStartOf="@id/imgArrow"
        app:layout_constraintStart_toStartOf="@id/tvComment"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lulus" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgLulus"
        android:layout_width="@dimen/margin_16dp"
        android:layout_height="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_8dp"
        app:layout_constraintBottom_toBottomOf="@id/tvKetLulus"
        app:layout_constraintStart_toEndOf="@id/tvKetLulus"
        app:layout_constraintTop_toTopOf="@id/tvKetLulus"
        app:srcCompat="@drawable/ic_jawabanbenar" />

    <TextView
        android:id="@+id/tvTime"
        style="@style/TextDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvKetLulus"
        app:layout_constraintTop_toBottomOf="@id/tvComment"
        tools:text="20 : 20 WITA" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTanggal"/>
</androidx.constraintlayout.widget.ConstraintLayout>