<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvLabelDiskusi"
        style="@style/TextLabelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="Diskusi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTestimoni"
        style="@style/TextDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:background="@drawable/background_square"
        android:gravity="top"
        android:hint="Buat diskusi..."
        android:minHeight="96dp"
        android:paddingStart="55dp"
        android:paddingTop="14dp"
        android:paddingEnd="@dimen/margin_16dp"
        android:paddingBottom="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelDiskusi" />

    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintStart_toStartOf="@id/editTestimoni"
        app:layout_constraintTop_toTopOf="@id/editTestimoni"
        tools:background="@color/colorPrimaryDark" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupTestimoni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="editTestimoni,imgUser" />

    <include layout="@layout/item_loading" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mRecyclerComment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTestimoni"
        tools:listitem="@layout/item_list_diskusi" />
</androidx.constraintlayout.widget.ConstraintLayout>