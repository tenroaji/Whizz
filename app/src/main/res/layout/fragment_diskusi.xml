<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvLabelDiskusi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diskusi"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/TextLabelTitle"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputDiskusi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:boxBackgroundColor="@android:color/transparent"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="4dp"
        app:boxCornerRadiusBottomStart="4dp"
        app:boxCornerRadiusTopEnd="4dp"
        app:boxCornerRadiusTopStart="4dp"
        app:boxStrokeColor="?attr/colorAccent"
        app:boxStrokeWidth="1dp"
        android:layout_marginTop="@dimen/margin_16dp"
        app:hintEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabelDiskusi">

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:background="@null"
            android:fontFamily="@font/muli_regular_family"
            android:text="lapar"
            android:paddingStart="55dp"
            android:paddingTop="12dp"
            android:paddingEnd="@dimen/margin_16dp"
            android:paddingBottom="11dp"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="32dp"
        tools:background="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintTop_toTopOf="@id/textInputDiskusi"
        app:layout_constraintStart_toStartOf="@id/textInputDiskusi"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_list_diskusi"
        app:layout_constraintTop_toBottomOf="@id/textInputDiskusi"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>