<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Translucent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="AppTheme.SplashTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextTitleToolbar" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/muli_bold_family</item>
        <item name="android:textColor">@color/fontBold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextLabelTitle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/muli_extra_bold_family</item>
        <item name="android:textColor">@color/fontBold</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="TextTitle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/muli_bold_family</item>
        <item name="android:textColor">@color/fontBold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextJenis" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/muli_semibold_family</item>
        <item name="android:textColor">@color/colorFontLabel1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextDesc" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/muli_regular_family</item>
        <item name="android:textColor">@color/colorFontLabel1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextLabel" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/muli_semibold_family</item>
        <item name="android:textColor">@color/colorFontLabel1</item>
        <item name="android:textSize">14sp</item>
    </style>

